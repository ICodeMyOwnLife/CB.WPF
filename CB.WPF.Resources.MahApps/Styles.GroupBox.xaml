<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/styles/controls.groupbox.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="GroupBoxStyle" TargetType="GroupBox" BasedOn="{StaticResource MetroGroupBox}">
        <Setter Property="Margin" Value="{DynamicResource NormalMargin}" />
        <Setter Property="mah:ControlsHelper.ContentCharacterCasing" Value="Normal" />
    </Style>

    <Style TargetType="GroupBox" BasedOn="{StaticResource GroupBoxStyle}" />
</ResourceDictionary>