<Application x:Class="TestMahAppsResources.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/TestStylesWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/CB.WPF.Resources.MahApps;component/Styles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/Brown.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Thickness x:Key="NormalMargin">8</Thickness>

            <ImageBrush x:Key="Background" ImageSource="Images/10.jpg" Stretch="UniformToFill" />

            <Style TargetType="DataGrid" BasedOn="{StaticResource DataGridStyle}">
                <Setter Property="IsReadOnly" Value="True" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>