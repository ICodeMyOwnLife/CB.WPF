<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CB.Wpf.Controls">
    
    <ControlTemplate x:Key="EnumListBoxTemplate" TargetType="local:EnumListBoxControlBase">
        <ListBox x:Name="listBox" SelectionMode="Multiple" />
    </ControlTemplate>

    <Style TargetType="local:EnumListBoxControlBase">
        <Setter Property="Template" Value="{StaticResource EnumListBoxTemplate}" />
    </Style>
</ResourceDictionary>