<Window x:Class="TestEnumListBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test.CB.Wpf.Controls.EnumListBox"
        xmlns:testEnumListBox="clr-namespace:TestEnumListBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <testEnumListBox:AlphabetEnumListBox x:Name="enumListBox" Grid.Row="0"></testEnumListBox:AlphabetEnumListBox>
        
        <TextBox Grid.Row="1" Text="{Binding ElementName=enumListBox, Path=SelectedValue}"></TextBox>
        
        <Button Grid.Row="2" Content="Set" Click="ButtonBase_OnClick"></Button>
    </Grid>
</Window>
